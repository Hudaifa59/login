<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editprofile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backbtnsett"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:src="@drawable/purplebutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/proedit"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toTopOf="@+id/Usernameed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/editco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="153dp"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Usernameed" />

        <EditText
            android:id="@+id/enicknameed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A020F0"
            android:ems="10"
            android:hint="Nickname"
            android:inputType="textPersonName"
            android:textColor="#a020f0"
            android:textColorHint="#a020f0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Usernameed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="253dp"
            android:backgroundTint="#A020F0"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="#a020f0"
            android:textColorHint="#a020f0"
            app:layout_constraintBottom_toTopOf="@+id/editco"
            app:layout_constraintStart_toStartOf="@+id/enicknameed"
            app:layout_constraintTop_toBottomOf="@+id/proedit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>