<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            app:layout_constraintBottom_toTopOf="@+id/Likesforcom"
            app:layout_constraintTop_toTopOf="@+id/Likesforcom">

            <ImageView
                android:id="@+id/commentprofile"
                android:layout_width="0dp"
                android:layout_height="73dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="100dp"
                app:layout_constraintEnd_toStartOf="@+id/showreply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:id="@+id/commentuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/commentus"
                app:layout_constraintStart_toStartOf="@+id/commentus"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentus"
                android:layout_width="275dp"
                android:layout_height="0dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="97dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentuser" />

            <TextView
                android:id="@+id/Reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Reply"
                app:layout_constraintBottom_toTopOf="@+id/replyrv"
                app:layout_constraintEnd_toStartOf="@+id/showreply"
                app:layout_constraintStart_toEndOf="@+id/commentprofile"
                app:layout_constraintTop_toBottomOf="@+id/commentus" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/replyrv"
                android:layout_width="319dp"
                android:layout_height="75dp"
                android:layout_marginStart="91dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/commentprofile"
                app:layout_constraintTop_toBottomOf="@+id/showreply" />

            <TextView
                android:id="@+id/showreply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="185dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commentprofile"
                app:layout_constraintTop_toBottomOf="@+id/commentus" />

            <ImageView
                android:id="@+id/commentlike"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:layout_marginStart="9dp"
                app:layout_constraintBottom_toTopOf="@+id/Likesforcom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commentus"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/Likesforcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/replyrv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/commentus" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>