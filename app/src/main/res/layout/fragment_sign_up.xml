<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/Confirmsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:backgroundTint="#A020F0"
            android:textColor="#a020f0"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:textColorHint="#a020f0"
            android:hint="Confirm password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supassword" />

        <EditText
            android:id="@+id/supassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:ems="10"
            android:backgroundTint="#A020F0"
            android:textColor="#a020f0"
            android:textColorHint="#a020f0"
            android:hint="Password"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/Confirmsu"
            app:layout_constraintStart_toStartOf="@+id/Confirmsu"
            app:layout_constraintTop_toBottomOf="@+id/EtEmail" />

        <EditText
            android:id="@+id/EtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:backgroundTint="#A020F0"
            android:drawableLeft="@drawable/userlogin"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email.."
            android:inputType="textEmailAddress"
            android:textColor="#a020f0"
            android:textColorHint="#a020f0"
            app:layout_constraintEnd_toEndOf="@+id/supassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/supassword"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="93dp"
            android:text="SignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Confirmsu" />

        <ImageView
            android:id="@+id/bactoLogin"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/purplebutton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>