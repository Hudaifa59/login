<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Forgotpass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/sendemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="16dp"
            android:text="send email"
            app:layout_constraintStart_toStartOf="@+id/sendemailfp"
            app:layout_constraintTop_toBottomOf="@+id/sendemailfp"
            android:backgroundTint="#a020f0"
            android:shadowColor="#a020f0"/>

        <EditText
            android:id="@+id/sendemailfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:backgroundTint="#a020f0"
            android:drawableTint="#A020F0"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="#a020f0"
            android:textColorHint="#a020f0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backtolog"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:onClick="backtolog"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/purplebutton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>